@model IEnumerable<IdentityRole>
<h1>Rol Listeleme</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
        </tr>
    </thead>
    @if (@Model.Count()>0)
    {
        <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td style="width: 180px;"> 
                    <a href="/admin/role/edit/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                    <a href="/admin/role/delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>     
            </tr>
        }
        </tbody>
    }
    @if (@Model.Count()==0)
    {
        <div class="alert alert-danger">
            <h3>ROL YOK</h3>
        </div>
    }
    
</table>