@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>



<div class="panel panel-primary">
    <div class="panel-heading">
        Roles
    </div>
    <table class="table table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td class="text-center" colspan="3">Rol yok</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/role/delete/@item.Id" class="btn btn-outline-danger">Delete</a>
                        <a href="/role/edit/@item.Id" class="btn btn-outline-danger">Edit</a>

                    </td>
                </tr>
               

            }
        }
    </table>

</div>