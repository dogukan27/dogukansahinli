@model YemekTarifleri.Models.LoginModel
@{
    ViewBag.Title = "Login";
}




<div class="container">
    @Html.ValidationSummary()
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>UserName</label>
            @Html.TextBoxFor(i => i.Username, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-outline-primary">Giriş</button>

    }

</div>


