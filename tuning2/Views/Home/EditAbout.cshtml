            @Html.DisplayFor(modelItem => item.baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.yazi)
        </td>

        <td style="width:270px;">
            @Html.ActionLink("Edit", "EditVizyon", new { id = item.id }, new { @class = "btn btn-success" })

        </td>
    </tr>
        }

    </table>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hakkinda)
            </th>
        </tr>

        @foreach (var item in Model.Hakkinda)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.yazi)
        </td>

        <td style="width:270px;">
            @Html.ActionLink("Edit", "EditHak", new { id = item.id }, new { @class = "btn btn-success" })

        </td>

    </tr>
        }

    </table>

   
</div>